//----------------------------------------------------------
//Important variables
//----------------------------------------------------------

d := 70 // cylinder of diameter
l := 1500// cylinder height
ACo := 31e-12
MCo := 1440e3
KCo := 410e3
ANi := 8e-12
MNi := 490e3
KNi := -5e3
cl := 2.5
alpha = 0.5
//----------------------------------------------------------
//Universe and cells
//----------------------------------------------------------

SetGridSize(d/cl,d/cl,l/cl)
SetCellSize(2.5e-9, 2.5e-9, 2.5e-9)

//----------------------------------------------------------
//Geometry
//----------------------------------------------------------

a := cylinder(70e-9, 1500e-9)
setgeom( a )
saveas(m, "geom")

//----------------------------------------------------------
//Regions
//----------------------------------------------------------

defregion(1, zrange(-750e-9, -250e-9))  // first cylinder 
defregion(2, zrange(-250e-9,250e-9))   // second cylinder  
defregion(3, zrange(250e-9, 750e-9))   // third cylinder   
save(regions)

//----------------------------------------------------------
//Parameters region 1
//----------------------------------------------------------
  
Msat.setregion(1, MNi) //material parameters of Co (Hard)
Aex.setregion(1, ANi)
Ku1.setregion(1, KNi)
anisU.setregion(1, vector(0,0,1))

     
//----------------------------------------------------------
//Parameters region 2
//----------------------------------------------------------

Msat.setregion(2, MCo) //material parameters of Py (Soft)
Aex.setregion(2, ACo)
Ku1.setregion(2, KCo)
anisU.setregion(2, vector(0,0,1))

//----------------------------------------------------------
//Parameters region 3
//----------------------------------------------------------

Msat.setregion(3, MNi)    //material parameters of Co (Hard)
Aex.setregion(3, ANi)
Ku1.setregion(3, KNi)
anisU.setregion(3, vector(0,0,1))

//----------------------------------------------------------
//Vortex
//----------------------------------------------------------

m = Vortex(1,-1)

//----------------------------------------------------------
//Relax and Energy
//----------------------------------------------------------

saveas(m, "vortex")

TableAdd(m_full)
TableAdd(B_ext)
TableAdd(E_exch)
TableAdd(E_demag)
TableAdd(E_zeeman)
TableAdd(E_total)

runwhile(maxtorque > 1e-4) 
Tablesave()
Save(m)

